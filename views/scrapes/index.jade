extends ../layout

block content
  .page-header
    h1 My Scrapes

  if scrapes
    .list-group-item.list-group-tracks-header
      span Name
      span Status
      span Added
      span Target Price
    .list-group.list-group-tracks
      each scrape in scrapes
        a.list-group-item
          span= scrape.name
          span= prettyTrackStatus(scrape)
          span= prettyDate.format(scrape.createdAt)
          span= scrape.alert.comparator