extends ../layout

block content
  .page-header
    h1 My Tracks

  if tracks
    .list-group-item.list-group-tracks-header
      span Name
      span Items
      span Status
      span Added
    .list-group.list-group-tracks
      each track in tracks
        a.list-group-item(href='/tracks/' + track._id)
          span= track.name
          span= track.selections.length
          span= prettyTrackStatus(track)
          span= prettyDate.format(track.createdAt)